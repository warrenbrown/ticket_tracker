<% @title = 'Sublime Text 3 - Project - Ticket Tracker' %>
<header>
  <h2><%= @project.name %></h2>

  <ul class="actions">
    <li><%= link_to 'Edit Project', edit_project_path(@project), class: 'edit' %></li>
    <li><%= link_to 'Delete Project', project_path(@project), class: 'delete', method: :delete, data: { confirm: 'Are you sure you want to delete this project?'} %></li>
  </ul>
  <p><%= @project.description %></p>
</header>
