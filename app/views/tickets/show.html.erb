<div id="ticket">
  <header>
    <h1><%= @project.name %></h1>
  </header>

  <header>
    <h2><%= @ticket.name %></h2>
    <ul class="actions">
      <li><%= link_to 'Edit Ticket', [ :edit, @project, @ticket ], class: 'edit' %></li>
      <li><%= link_to 'Delete Ticket', [@project, @ticket], class: 'delete', method: :delete, data: { confirm: 'Are you sure you want to delete this ticket?'} %></li>
    </ul>
  </header>

  <%= simple_format(@ticket.description) %>
</div>
